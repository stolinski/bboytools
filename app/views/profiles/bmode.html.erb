				<div class="use-move">Use Move?</div>
				<%= render 'formbmode', move: move %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<div class="span6 reset">
	<a href="#" id="end-battle">End Current Battle</a>
</div>
