<h1>Battle Mode</h1>
<div class="span6">
	<h4>Top Rock</h4>
	<div class="moves">
		<% @tops.each do |move| %>
		<div id="move_<%= move.id %>" class="bmodewrap <%= move.bmode %>">
			<div class="move <%= move.type.name.downcase.tr(" ", "-") %>"><%= move.name %></div>
			<div class="bmode">
				<div class="use-move">Use Move?</div>
				<%= render 'formbmode', move: move %>
			</div>
		</div>
		<% end %>
	</div>
	<h4>Footwork</h4>
	<div class="moves">
		<% @footwork.each do |move| %>
