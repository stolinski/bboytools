<h1 class="page-title">Battle Log</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Results</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @battles.each do |battle| %>
  <tr>
    <td><%= battle.name %></td>
    <td><%= battle.location %></td>
    <td><%= battle.date %></td>
    <td><%= battle.results %></td>
    <td><%= battle.notes %></td>
    <td><%= link_to 'Show', battle %></td>
    <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
    <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

